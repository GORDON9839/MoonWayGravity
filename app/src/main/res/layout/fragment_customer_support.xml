<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerSupportFragment"
    android:orientation="vertical">



    <!--Parking Issue-->
    <androidx.cardview.widget.CardView
        android:id="@+id/parking_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/c_parking_issue"
                android:src="@drawable/parking"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking Issue"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/c_parking_issue"
                android:layout_toEndOf="@+id/c_parking_issue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--Suspicious Car Activity-->
    <androidx.cardview.widget.CardView
        android:id="@+id/suspicious_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/c_payment_issue"
                android:src="@drawable/suspicious"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suspicious Issue"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/c_payment_issue"
                android:layout_toEndOf="@+id/c_payment_issue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--Top up Issue-->
    <androidx.cardview.widget.CardView
        android:id="@+id/topup_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/c_topup_issue"
                android:src="@drawable/topup"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Up Issue"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/c_topup_issue"
                android:layout_toEndOf="@+id/c_topup_issue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Entry Issue-->
    <androidx.cardview.widget.CardView
        android:id="@+id/entry_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/c_entry_issue"
                android:src="@drawable/entry"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entry Issue"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/c_entry_issue"
                android:layout_toEndOf="@+id/c_entry_issue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Other Issue-->
    <androidx.cardview.widget.CardView
        android:id="@+id/other_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/c_other_issue"
                android:src="@drawable/other"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/c_other_issue"
                android:layout_toEndOf="@+id/c_other_issue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>