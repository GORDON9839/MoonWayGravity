<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAvailableParking">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_parking_toolbar"
        />
    <LinearLayout
        android:layout_below="@+id/view_parking_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/available_parking_slot"
            style="?materialButtonOutlinedStyle"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/availble_parking_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/available_parking_item"/>
    </LinearLayout>
</RelativeLayout>